<odoo>
	<!-- Search View -->
	<record id="unique_package_search_view" model="ir.ui.view">
		<field name="name">unique.package.search</field>
		<field name="model">unique.package</field>
		<field name="arch" type="xml">
			<search>
				<field name="name"/>
				<field name="price"/>
				<field name="validation_days"/>
			</search>
		</field>
	</record>

    <!-- Tree View -->
    <record id="unique_package_tree_view" model="ir.ui.view">
        <field name="name">unique.package.tree</field>
        <field name="model">unique.package</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="validation_days" widget="Integer"/>
                <field name="description"/>
				<field name="create_date"/>
				<field name="write_date"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="unique_package_form_view" model="ir.ui.view">
        <field name="name">unique.package.form</field>
        <field name="model">unique.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
						<field name="price"/>
						<field name="validation_days" widget="Integer"/>
						<field name="description"/>
						<field name="create_date"/>
						<field name="write_date"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action - Updated with search view and graph/pivot -->
    <record id="unique_package_action" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">unique.package</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="unique_package_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Package</p>
        </field>
    </record>

    <!-- Menu Item -->
    <!--<menuitem id="unique_package_menu_root" name="Packages"/>
    <menuitem id="unique_package_menu" name="Packages" parent="unique_package_menu_root" action="unique_package_action"/>-->
</odoo>