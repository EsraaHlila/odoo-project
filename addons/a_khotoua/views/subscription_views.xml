<odoo>
    <record id="view_crm_subscription_form" model="ir.ui.view">
        <field name="name">crm.subscription.form</field>
        <field name="model">crm.subscription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="plan_name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_crm_subscription_tree" model="ir.ui.view">
        <field name="name">crm.subscription.tree</field>
        <field name="model">crm.subscription</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="plan_name"/>
                <field name="status"/>
            </list>
        </field>
    </record>
	
	<record id="action_crm_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">crm.subscription</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_crm_subscription" name="Subscriptions" parent="menu_crm_app_root" action="action_crm_subscription"/>

    
</odoo>
