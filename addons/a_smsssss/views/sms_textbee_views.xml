<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_sms_textbee_tree" model="ir.ui.view">
        <field name="name">sms.textbee.tree</field>
        <field name="model">sms.textbee</field>
        <field name="arch" type="xml">
            <list>
                <field name="recipient_numbers"/>
                <field name="status"/>
                <field name="sent_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sms_textbee_form" model="ir.ui.view">
        <field name="name">sms.textbee.form</field>
        <field name="model">sms.textbee</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_sms" type="object" string="Send SMS" 
                            class="btn-primary" invisible="status == 'sent'"/>
                    <field name="status" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="status" readonly="1"/>
                            <field name="sent_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="sender_id"/>
                        </group>
                    </group>
                    
                    <group string="Recipients">
						<notebook>
							<page string="Parents">
								<field name="parent_recipients" widget="many2many_tags"/>
								<button name="action_load_all_parents" type="object" string="Select All Parents" class="oe_highlight"/>
							</page>
							<!--<page string="Partners">
								<field name="partner_recipients" widget="many2many_tags"/>
								<button name="action_load_all_partners" type="object" string="Select All Partners" class="oe_highlight"/>
							</page>-->
							<page string="Manual Numbers">
								<field name="recipient_numbers" placeholder="21612345678, 21698765432&#10;21655555555" nolabel="1"/>
							</page>
						</notebook>
                    </group>
                    
                    <group string="Message">
                        <field name="message" placeholder="Type your message here..." nolabel="1"/>
                    </group>
                    
                    <group string="API Response" invisible="status == 'draft'">
                        <field name="response_data" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sms_textbee" model="ir.actions.act_window">
        <field name="name">TextBee SMS</field>
        <field name="res_model">sms.textbee</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_sms_textbee_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Send SMS messages via TextBee API
            </p>
        </field>
    </record>

    <!-- Create new root menu to avoid parent issues -->
    <menuitem id="menu_sms_textbee_root" name="TextBee" sequence="80"/>
    <menuitem id="menu_sms_textbee" name="SMS Messages" 
              action="action_sms_textbee" parent="menu_sms_textbee_root" sequence="10"/>
</odoo>