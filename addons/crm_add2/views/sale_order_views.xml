<odoo>
    <record id="view_order_line_tree_discount" model="ir.ui.view">
        <field name="name">sale.order.line.tree.discount</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="discount" string="Discount(%)" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_inherit_order_status" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.order_status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="order_tag"/>
            </xpath>
        </field>
    </record>
</odoo>