<odoo>
    <template id="document_tax_totals_inherit_droit_timbre" inherit_id="account.document_tax_totals_template">


        <!--<xpath expr="//tr[@class='oe_total']" position="replace"/>-->

        <xpath expr="//tr[@class='o_total']" position="before">
            <tr class="o_droit_de_timbre">
                <td><strong>Droit de Timbre</strong></td>
                <td class="text-end">
                    <span t-field="o.droit_de_timbre"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
            </tr>
        </xpath>
		        <xpath expr="//tr[@class='o_total']" position="replace">
            <tr class="o_amount_total">
                <td><strong>Total TTC</strong></td>
                <td class="text-end">
                    <span t-field="o.amount_total_with_stamp"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                </td>
            </tr>
        </xpath>

    </template>
</odoo>

