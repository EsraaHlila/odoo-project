<odoo>
    <!-- FORM VIEW INHERIT -->
    <record id="view_move_form_inherit_droit_timbre" model="ir.ui.view">
        <field name="name">account.move.form.droit.timbre</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@class='oe_subtotal_footer']" position="inside">
                <field name="droit_de_timbre"/>
				<field name="amount_total_with_stamp" readonly="1"/>
            </xpath>
        </field>
    </record>

