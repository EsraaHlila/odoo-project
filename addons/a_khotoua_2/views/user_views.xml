<odoo>
    <record id="view_crm_user_form" model="ir.ui.view">
        <field name="name">crm.user.form</field>
        <field name="model">crm.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="role"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_crm_user_tree" model="ir.ui.view">
        <field name="name">crm.user.tree</field>
        <field name="model">crm.user</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
            </list>
        </field>
    </record>

    <record id="action_crm_user" model="ir.actions.act_window">
        <field name="name">CRM Users</field>
        <field name="res_model">crm.user</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_crm_root" name="CRM"/>
    <menuitem id="menu_crm_user" name="Users" parent="menu_crm_root" action="action_crm_user"/>
</odoo>
