<odoo>
    <record id="view_crm_payment_form" model="ir.ui.view">
        <field name="name">crm.payment.form</field>
        <field name="model">crm.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subscription_id"/>
                        <field name="amount"/>
                        <field name="payment_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_crm_payment_tree" model="ir.ui.view">
        <field name="name">crm.payment.tree</field>
        <field name="model">crm.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="subscription_id"/>
                <field name="amount"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>

    <record id="action_crm_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">crm.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_crm_payment" name="Payments" parent="menu_crm_root" action="action_crm_payment"/>
</odoo>
