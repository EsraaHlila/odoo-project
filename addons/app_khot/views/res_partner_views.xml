<odoo>
  <!-- Tree/List View -->
  <record id="view_app_user_tree" model="ir.ui.view">
    <field name="name">res.partner.list</field>
    <field name="model">res.partner</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_app_user_form" model="ir.ui.view">
    <field name="name">res.partner.form</field>
    <field name="model">res.partner</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="active"/>
          </group>
          <footer>
            <button name="action_sync_partner"
                    type="object"
                    string="Create CRM Contact"
                    class="btn-primary"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>


    <record id="view_partner_form_company_selection" model="ir.ui.view">
        <field name="name">res.partner.form.company.selection</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Target the parent company field and add after it -->
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="company_id" 
                       widget="res_partner_many2one"
                       options="{'no_create': True, 'no_create_edit': True}"
                       invisible="is_company"
                       groups="base.group_partner_manager"/>
            </xpath>
        </field>
    </record>
  <!-- Action to open the view -->
  <record id="action_app_user" model="ir.actions.act_window">
    <field name="name">App Users</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_app_user_tree"/>
  </record>

  <!-- Menu structure -->
  <menuitem id="menu_app_user_root" name="App Users" sequence="10"/>
  <menuitem id="menu_app_user"
            name="Manage Users"
            parent="menu_app_user_root"
            action="action_app_user"/>
</odoo>
