<odoo>
    <record id="res_config_settings_view_form_inherit_textbee" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.textbee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" string="TextBee">
                    <h2>TextBee SMS Settings</h2>
                    <group>
                        <field name="textbee_api_key"/>
                        <field name="textbee_device_id"/>
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
