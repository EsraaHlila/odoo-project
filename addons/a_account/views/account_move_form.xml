<odoo>
    <record id="view_move_form_unique_company" model="ir.ui.view">
        <field name="name">account.move.form.unique.company</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Hide the original partner_id field -->
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Insert our unique_company_id field where we want it -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_company_id"
                       string="Company"
                       placeholder="Select a company..."
                       options="{'no_quick_create': True}"
                       context="{'show_address': 1}"
                       required="True"
                       readonly="state != 'draft'"/>
            </xpath>

        </field>
    </record>
	
	
	<record id="view_account_move_send_inherit_parent" model="ir.ui.view">
		<field name="name">account.move.send.inherit.parent</field>
		<field name="model">account.move.send.wizard</field>
		<field name="inherit_id" ref="account.account_move_send_wizard_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='mail_partner_ids']" position="after">
				<label for="x_company_id">Company</label><field name="x_company_id"/>
			</xpath>
		</field>
	</record>
	
	
</odoo>
