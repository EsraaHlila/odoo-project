<odoo>
    <record id="view_move_form_unique_company" model="ir.ui.view">
        <field name="name">account.move.form.unique.company</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Hide the original partner_id field -->
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Insert our unique_company_id field where we want it -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_company_id"
                       string="Company"
                       placeholder="Select a company..."
                       options="{'no_quick_create': True}"
                       context="{'show_address': 1}"
                       required="True"
                       readonly="state != 'draft'"/>
            </xpath>

        </field>
    </record>
</odoo>
