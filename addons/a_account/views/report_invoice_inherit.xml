<odoo>
    <data>
        <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">
            <!-- Inject inside the empty row -->
            <xpath expr="//div[@class='row']" position="replace">
                <div class="row">
                    <!--<strong>My Custom Field:</strong>-->
                    <span t-field="o.x_company_id.name"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
