<odoo>
    <template id="report_invoice_document_inherit_parent" inherit_id="account.report_invoice_document">
        <xpath expr="//div[contains(@class,'row')]" position="replace">
            <!-- Replace the whole address row with Parent Name only -->
            <div class="row">
                <div class="offset-col-6 col-6" name="custom_parent_address">
                    <!--<strong>Parent</strong><br/>-->
                    <span t-if="o.x_parent_id" t-field="o.x_parent_id.full_name"/>
                    <span t-else="">No Parent Defined</span>
                </div>
            </div>
        </xpath>
    </template>

